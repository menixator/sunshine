{
  "name": "sunshine.core",
  "version": "1.0.0",
  "description": "Power usage/production dashboard",
  "main": "index.js",
  "repository": "git@github.com:menixator/sunshine.core.git",
  "author": "menixator <ahmed.miljau@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "bcrypt": "^2.0.1",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "express-graphql": "^0.6.12",
    "graphql": "^0.13.2",
    "reflect-metadata": "^0.1.12",
    "sqlite3": "^4.0.0",
    "typeorm": "^0.2.3",
    "uuid": "^3.2.1"
  },
  "scripts": {
    "db:wipe": "rm -rf db/*",
    "migrations:run": "yarn ts-node $(yarn bin)/typeorm migration:run",
    "migrations:regenerate": "yarn db:wipe && rm ./src/migrations/*.ts && yarn ts-node $(yarn bin)/typeorm migration:generate --name Genesis",
    "seed": "$(yarn bin)/ts-node -r tsconfig-paths/register src/seeds/StaticSeeds",
    "start": "$(yarn bin)/ts-node -r tsconfig-paths/register src/main"
  },
  "devDependencies": {
    "@types/bcrypt": "^2.0.0",
    "@types/express": "^4.11.1",
    "@types/express-graphql": "^0.6.1",
    "@types/graphql": "^0.13.0",
    "@types/uuid": "^3.4.3",
    "ts-node": "^6.0.1",
    "tsconfig-paths": "^3.3.1",
    "typescript": "^2.8.3"
  }
}
